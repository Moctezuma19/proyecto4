<?php
	
	include("../conexion.php");

	$codigo=$_POST["cb"];
	$p=$_POST["precio"];
	$t=$_POST["tipo"];
	$m=$_POST["memoria"];

	$rutaEnServidor='productos';
	$rutaTemporal=$_FILES['imagen']['tmp_name'];
	$nombreImagen=$_FILES['imagen']['name'];
	$rutaDestino=$rutaEnServidor.'/'.$nombreImagen;

	if($nombreImagen=="") {
		$consulta="UPDATE consola SET tipoConsola='$t', precio='$p', memoria='$m'  WHERE codigoBarras='$codigo'";

		if($conexion->query($consulta)==true) {
			echo "Se actualizó la consola";
		} else {
			echo "Ooops";
		}
	} else {
		move_uploaded_file($rutaTemporal, $rutaDestino);
		$consulta="UPDATE consola SET tipoConsola='$t', precio='$p', memoria='$m', imagen='$nombreImagen' WHERE codigoBarras='$codigo'";

		if($conexion->query($consulta)==true) {
			echo "Se actualizó la consola";
		} else {
			echo "Ooops";
		}
	}

?>